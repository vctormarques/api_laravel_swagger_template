{
    "openapi": "3.0.0",
    "info": {
        "title": "API app dos cooperados",
        "description": "Documentação da API de aplicativo de cooperados",
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/login": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Realiza o login do usuário",
                "operationId": "59365b9927ac8e308dda81cf2f957106",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "crm",
                                    "senha"
                                ],
                                "properties": {
                                    "crm": {
                                        "description": "CRM do usuário",
                                        "type": "integer",
                                        "example": 123456
                                    },
                                    "senha": {
                                        "description": "Senha do usuário",
                                        "type": "string",
                                        "format": "password",
                                        "example": "minhasenha123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login bem-sucedido",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Login efetuado com sucesso"
                                        },
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Credenciais inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Erro na requisicao"
                                        },
                                        "data": {
                                            "properties": {
                                                "message": {
                                                    "type": "string",
                                                    "example": "Usuário ou Senha inválida"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Login": {
                "title": "Login",
                "description": "Dados de login do usuário",
                "required": [
                    "crm",
                    "senha"
                ],
                "properties": {
                    "crm": {
                        "description": "Número do CRM do usuário",
                        "type": "string",
                        "example": "123456"
                    },
                    "senha": {
                        "description": "Senha do usuário",
                        "type": "string",
                        "format": "password",
                        "example": "senha123"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "AutoId": {
                        "type": "integer"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "crm": {
                        "type": "integer"
                    },
                    "cpf": {
                        "type": "integer"
                    },
                    "contratoFinanceiro": {
                        "type": "integer"
                    },
                    "perfil": {
                        "type": "integer"
                    },
                    "diretor": {
                        "type": "integer"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Autenticação",
            "description": "Autenticação"
        }
    ]
}